<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_interface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_layout_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alihamuh.ali.calculator_simple.Main_interface"
    tools:showIn="@layout/activity_main_interface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:ems="10"
                android:id="@+id/secondary"
                android:textSize="@dimen/answer_text_size"
                android:layout_weight="1"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:textIsSelectable="false"
                android:cursorVisible="false"
                android:gravity="end|center_vertical"
                android:text="0"
                android:textColor="@color/consloeColor"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:clickable="false" />


            <com.alihamuh.ali.calculator_simple.NoImeEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textIsSelectable="true"
                android:cursorVisible="true"
                android:ems="10"
                android:id="@+id/primary"
                android:layout_weight="1.5"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:text="0"
                android:textSize="30sp"
                android:gravity="end|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.1"
                android:background="#00ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:id="@+id/row_1">

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:id="@+id/btn_sin"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:text="sin "
                        android:textAllCaps="false"
                        android:onClick="Sin" />

                    <Button
                        android:text="cos "
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_cos"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Cos" />


                    <Button
                        android:text="tan "
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_tan"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Tan" />

                    <Button
                        android:text="c "
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_c"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Del" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_below="@id/row_1"
                    android:id="@+id/row_2">

                    <Button
                        android:text="1"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_1"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="One" />

                    <Button
                        android:text="2"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_2"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Two" />

                    <Button
                        android:text="3"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_3"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Three" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_plus"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:text="+"
                        android:onClick="Plus" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_below="@id/row_2"
                    android:id="@+id/row_3">

                    <Button
                        android:text="4"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_4"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Four" />

                    <Button
                        android:text="5"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_5"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Five" />

                    <Button
                        android:text="6"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_6"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Six" />
                    <Button
                        android:text="-"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_minus"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Minus" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_below="@id/row_3"
                    android:id="@+id/row_4">

                    <Button
                        android:text="7"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_7"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Seven" />

                    <Button
                        android:text="8"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_8"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Eight" />

                    <Button
                        android:text="9"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_9"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Nine" />

                    <Button
                        android:text="/"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_divide"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Divide" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_below="@id/row_4"
                    android:id="@+id/row_5">

                    <Button
                        android:text="."
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_dec"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Decimal" />

                    <Button
                        android:text="0"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_0"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Zero" />

                    <Button
                        android:text="="
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_equal"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:onClick="Equal" />

                    <Button
                        android:text="Ã—"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_multiply"
                        android:layout_weight="1"
                        android:background="@drawable/button_main"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                        android:textSize="@dimen/button_text_size"
                        android:textColor="@color/textColor"
                        android:textAllCaps="false"
                        android:onClick="Product" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/row_6"
                android:background="@drawable/sub_button"
                android:onClick="slideUpDown">

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/subcontent_main_intent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_weight="1" />


</RelativeLayout>